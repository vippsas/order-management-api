				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"imageId\": \"{{imageId}}\",\n  \"src\": \"\",\n  \"type\": \"base64\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/order-management/v1/images",
					"host": [
						"{{base_url}}"
					],
